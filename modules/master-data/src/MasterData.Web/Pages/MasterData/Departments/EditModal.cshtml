@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using MasterData.Localization
@using MasterData.Web.Pages.MasterData.Departments
@using Volo.Abp.Localization
@using Volo.Abp.ObjectExtending
@model EditModalModel
@inject IHtmlLocalizer<MasterDataResource> L
@inject IStringLocalizerFactory StringLocalizerFactory
@{ Layout = null; }
<form method="post" asp-page="/MasterData/Departments/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Edit"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-department-modal-tabs">
                <abp-tab title="@L["DepartmentInformations"].Value">
                    <input asp-for="DepartmentInfo.Id" />
                    <input asp-for="DepartmentInfo.ConcurrencyStamp" />
                    <abp-input asp-for="DepartmentInfo.Code" readonly="true" />
                    <abp-input asp-for="DepartmentInfo.Name" />
                    <abp-input asp-for="DepartmentInfo.EmailAddress" />
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
