@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Localization
@using BackendAdminApp.Host.Localization
@using Volo.Abp.Users
@using HSaaS.AspNetCore.Mvc.UI.Widgets.Pages.Widgets
@model BackendAdminApp.Host.Pages.IndexModel
@inject IHtmlLocalizer<BackendAdminAppResource> L
@inject ICurrentUser CurrentUser
@inject ILanguageProvider LanguageProvider
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Index.css" />
    </abp-style-bundle>
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Index.js" />
    </abp-script-bundle>
}
<selection class="content">
    <div class="container-fluid">
        <div class="text-center">
            <div class="badge badge-success h5 rounded mb-4 " role="alert">
                <h5 class="m-1"> <i class="fas fa-rocket"></i> @L["LongWelcomeMessage"]</h5>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            @foreach (var boxInfo in Model.Widgets)
            {
                <div class="col-lg-3 col-6">
                    @(await Component.InvokeAsync(typeof(SmallBoxWidgetViewComponent), boxInfo))
                </div>
            }
        </div>
    </div>
</selection>
